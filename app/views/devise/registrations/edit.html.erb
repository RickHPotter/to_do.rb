<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: %>

  <div class='mb-6'>
    <%= render TextFieldComponent.new(form: f, field: :first_name, options: { autofocus: true }) %>
  </div>

  <div class='mb-6'>
    <%= render TextFieldComponent.new(form: f, field: :last_name) %>
  </div>

  <div class='mb-6'>
    <%= render TextFieldComponent.new(form: f, field: :email, options: { type: :email }) %>
  </div>

  <div class='mb-6'>
    <%= render TextFieldComponent.new(form: f, field: :password, options: { type: :password }) %>

    <% if @minimum_password_length %>
      <em class='text-sm text-gray-500'>(<%= @minimum_password_length %> chars. min.)</em>
    <% end %>
  </div>

  <div class='mb-6'>
    <%= render TextFieldComponent.new(form: f, field: :password_confirmation, options: { type: :password }) %>
  </div>

  <div>
    <%= render ButtonComponent.new(form: f, options: { label: t('actions.update') }) %>
  </div>
<% end %>

<%= render ButtonComponent.new(link: root_path, options: { label: I18n.t('navigation.back'), colour: :light }) %>
