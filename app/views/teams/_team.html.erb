<%= turbo_frame_tag dom_id team do %>
  <div class="bg-white w-full p-4 rounded-md mt-2">
    <h1 class="my-5 font-bold text-gray-700 text-4xl hover:text-blue-400">
      <%= link_to team.team_name, edit_team_path(team),
                  data: { 'turbo-frame': "edit_team_#{team.id}" } %>
    </h1>
    <p class="my-5">
      <%= team.description %>
    </p>

    <div class="w-full mt-2 flex flex-wrap border shadow p-2 rounded-md">
      <p class="flex-1 text-center font-bold text-gray-700">Created at: <%= team.created_at.strftime('%d/%m/%Y') %></p>
      <p class="flex-1 text-center font-bold text-gray-700">Creator: <%= team.creator.full_name %></p>
    </div>

    <%= turbo_frame_tag "edit_team_#{team.id}" %>
  </div>
<% end %>
