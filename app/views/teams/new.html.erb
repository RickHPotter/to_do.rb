<%= turbo_frame_tag :container do %>
  <% form_with(
       model: @team, id: 'form',
       class: 'contents text-black',
       html: { data: { controller: 'form-validate' } }
     ) do |form| %>

    <% object = @team %>

    <%= render 'shared/errors', object: %>

    <div class="flex space-x-12">
      <div class="flex w-2/3 flex-col gap-6 my-5">
        <%= render TextFieldComponent.new(form:, object:, field: :team_name, options: { autofocus: true }) %>
      </div>

      <div class="flex w-1/3 flex-col gap-6 my-5">
        <%= render TextFieldComponent.new(form:, object:, field: :description) %>
      </div>

      <div class="flex w-1/3 flex-col gap-6 my-5">
        <%= render TextFieldComponent.new(form:, object:, field: :policy, items: @policies, options: { type: :select }) %>
      </div>
    </div>

    <div class="inline">
      <%= render ButtonComponent.new(form:, options: { label: 'Create Team', colour: :orange }) %>
    </div>
  <% end %>
<% end %>
