<div class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <div class="flex space-x-12">
    <div class="flex w-2/3 flex-col my-6">
      <%= render TextFieldComponent.new(form:, field: :user_id, items: @users, options: { type: :select }) %>
    </div>
    <!-- FIXME: DRY -->
    <div class="flex w-1/3 flex-col my-6">
      <ul class="w-full">
        <li>
          <input type="checkbox" id="admin-option"
                                 value="" class="hidden peer" required=""
                                 onclick="this.checked ? this.parentElement.querySelector('[data-target-text]').innerText = 'Admin' : this.parentElement.querySelector('[data-target-text]').innerText = 'Member'">
          <label for="admin-option" class="inline-flex items-center justify-center w-full p5 text-gray-500 bg-white border-2 border-gray-200 rounded-lg cursor-pointer peer-checked:border-orange-360 hover:text-gray-600 peer-checked:text-gray-600 hover:bg-gray-50">
            <div class="flex gap-2 my-1">
              <div class="w-full text-lg italic text-black" data-target-text='' >Member</div>
            </div>
          </label>
        </li>
      </ul>
    </div>
  </div>

  <%= render ButtonComponent.new(options: { label: action_model(:destroy, TeamUser), colour: :orange, data: { action: 'nested-form#remove' } }) %>
</div>
