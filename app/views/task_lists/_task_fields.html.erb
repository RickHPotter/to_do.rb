<div class="nested-fields">
  <div class="flex space-x-12">
    <div class="flex w-2/3 flex-col gap-6 my-5">
      <%= render TextFieldComponent.new(form:, field: :task_name, options: { autofocus: true }) %>
    </div>

    <div class="flex w-1/3 flex-col gap-6 my-5">
      <%= render TextFieldComponent.new(form:, field: :description) %>
    </div>
  </div>

  <div class="flex w-1/3 flex-col gap-6 my-5">
    <%= render TextFieldComponent.new(form:, field: :progress) %>
  </div>

  <div class="flex space-x-12">
    <div class="flex w-1/3 flex-col gap-6 my-5">
      <%= render TextFieldComponent.new(form:, field: :order) %>
    </div>

    <div class="flex w-1/3 flex-col gap-6 my-5">
      <%= render TextFieldComponent.new(form:, field: :priority) %>
    </div>

    <div class="flex w-1/3 flex-col gap-6 my-5">
      <%= render TextFieldComponent.new(form:, field: :assignee_id) %>
    </div>
  </div>

  <%= render ButtonComponent.new(options: { label: 'Remove Task', colour: :orange, data: { action: 'nested-form#remove' } }) %>
</div>
