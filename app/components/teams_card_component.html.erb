<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto grid max-w-7xl gap-x-8 gap-y-32 px-6 lg:px-8 xl:grid-cols-3">
    <div class="max-w-2xl border-x-2 border-orange-360">
      <h2 class="text-3xl font-bold text-center tracking-tight text-gray-900 sm:text-4xl"><%= @title %></h2>
      <p class="mt-6 text-center text-lg leading-8 text-gray-600"><%= @description || 'Maybe this team needs a description, you know.' %></p>

      <hr class='py-7'>

      <div class="flex flex-col items-center pb-10">
        <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src=<%= @creator[:image_url] %> alt=<%= @creator[:name] %>/>
        <span class="text-lg text-gray-400">Created by <%= @creator[:name] %></span>
      </div>
    </div>
    <ul role="list" class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2">
      <% @members.each do |member| %>
      <li>
        <div class="flex items-center gap-x-6">
          <img class="h-16 w-16 rounded-full" src=<%= member.image_url %> alt="">
          <div>
            <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900"><%= member.full_name %></h3>
            <p class="text-sm font-semibold leading-6 text-indigo-600"><%= member.email %></p>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
