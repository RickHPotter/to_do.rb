<% if form %>
  <%= form.submit options[:label], id: options[:id], class: form_button_class(options[:colour]), data: options[:data] %>
<% else %>
  <%= link_to link, class: form_button_class(options[:colour]), data: options[:data] do %>
    <% if options[:label].in? [I18n.t('navigation.previous'), I18n.t('navigation.back')] %>
      <svg class="w-3.5 h-3.0 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
      </svg>
    <% end %>

    <%= options[:label] %>

    <% if options[:label] == I18n.t('navigation.next') %>
      <svg class="w-3.5 h-3.0 ml-2 rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
      </svg>
    <% end %>
  <% end %>
<% end %>
